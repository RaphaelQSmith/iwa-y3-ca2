<p align="right">
    <a class="btn btn-danger" href="/">Add</a>
</p>
<table class="table table-hover" style="margin-bottom: 15%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Cast</th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.year}}</td>
                <td>{{this.genre}}</td>
                <td>{{this.cast}}</td>
                <td>
                    <a href="/movies/{{this._id}}"><i class="fa fa-edit fa-lg" aria-hidden="true"></i></a>
                    <a href="/movies/del/{{this._id}}" onclick="return confirm('This action is irreversible...')"><i class="fa fa-minus-circle fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>